            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Droid Desserts"
            android:textSize="24sp"
            android:paddingLeft="222dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
