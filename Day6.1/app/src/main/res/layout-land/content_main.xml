                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="6dp"
                android:text="Ice cream sandwiches have chocolate."
                android:paddingBottom="10dp"/>

        </LinearLayout>
    </LinearLayout>





